<p id="notice"><%= notice %></p>

<div class="row borde shadow-lg p-3 mb-5 bg-white rounded">
  <div class="col-md-12">
    <h1>Productos</h1>
    <%= link_to 'Nuevo Producto', new_producto_path, :class => "btn btn-primary" %>
    <div class="table-responsive">    
      <table class="table">
        <thead>
          <tr>
            <th>Articulo</th>
            <th>Precio</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @productos.each do |producto| %>
            <tr>
              <td><%= producto.articulo %></td>
              <td><%= producto.precio %></td>
              <td><%= producto.nombre %></td>
              <td><%= producto.descripcion %></td>
              <!--
              <td><%= link_to 'Show', producto %></td>
              -->
              <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
              <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

